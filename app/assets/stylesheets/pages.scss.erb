/***************
GLOBAL STYLES
***************/
html, body {
  height:100%;
}
body {
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 100;
  font-size: 16px;
}
.container {
  width: 100%;
  height: 100%;
}
.container-half {
  width: 100%;
  height: 50%;
}
.wrapper {
  width: 80%;
  height: 80%;
  margin: 0 auto;
}

.clearfix:before,
.clearfix:after {
  content: " ";
  display: table; 
}
.clearfix:after {
  clear: both; 
}
/***************
MODULAR CSS
***************/
.absolute {
  position: absolute;
}
.relative {
  position: relative
}
/***************
BODY SECTIONS
***************/
.landing-page {
  background: url("<%= asset_path 'background-image-binary-2.jpg' %>") no-repeat;
}
.landing-page img {
  max-width: 100%;
  max-height: 100%;
  left: 0;
  top: 0;
}
.landing-page-interior {
  text-align: center;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.landing-page-interior h1 {
  border: 4px solid #fff;
  width: 40%;
  padding: 10px;
  color: #fff;
  margin-left: auto;
  margin-right: auto;
}
.landing-page-interior h2 {
  background-color: #2A2C2D;
  color: #fff;
  width: 30%;
  padding: 10px;
  margin-left: auto;
  margin-right: auto;
}
.about-me h1 {
  text-align: center;
  color: #16488D;
}
.about-me img {
  height: 40%;
  width: 40%;
  margin-left: auto;
  margin-right: auto;
  display: block;
  margin-top: 20px;
  // border-radius: 50%; 
}
.about-me p { 
  width: 50%;
  line-height: 1.6;
}
.first-page-break {
  background: url("<%= asset_path 'background-image-binary-3.jpg' %>") no-repeat;
}
.projects {
  text-align: center;
}
.projects h1 {
  color: #16488D; 
}
.projects h3 {
  color: #16488D;
}
.projects img {
  height: 90%;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  display: block;
}
#just-a-break-info {
  display: none;
}
/***************
BUTTONS
***************/
.button {
  margin-top: 20px;
  border: 2px solid #16488D;
  color: #16488D;
  padding: 10px 0;
  margin-left: auto;
  margin-right: auto;
  display: block;
  width: 80%;
  -webkit-transition: all .25s linear;
  -moz-transition: all .25s linear;
  -o-transition: all .25s linear;
  transition: all .25s linear;
  -webkit-transform: scale(.9, .9);
  -moz-transform: scale(.9, .9);
  -ms-transform: scale(.9, .9);
  -o-transform: scale(.9, .9);
  transform: scale(.9, .9);
}
.button:focus,
.button:hover {
  background-color: #16488D;
  color: #fff;
  -webkit-transform: scale(1, 1) translate(0, -5px);
  -moz-transform: scale(1, 1) translate(0, -5px);
  -ms-transform: scale(1, 1) translate(0, -5px);
  -o-transform: scale(1, 1) translate(0, -5px);
  transform: scale(1, 1) translate(0, -5px);
}
/***************
COLUMNS
***************/
.column-6 {
  margin-top: 10px;
  float: left;
  width: 50%;
}
.column-4 {
  margin-top: 20px;
  margin-bottom: 20px;
  float: left;
  width: 33.33%;
}
.column-4:first-child {
  margin-left: 0px;
}